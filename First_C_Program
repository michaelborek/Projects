#include <cs50.h>
#include <stdio.h>
#include <string.h>

int main(void)
{
    while (true)
    {
    int i = get_int("Height: ");

    if (0 < i && i <= 8)
    {
        for (int count = 1; count <= i; ++count)
        {
            for (int j = 1; j <= (i - count); ++j)
            {
                printf(" ");
            }
            for (int g = 1; g <= count; ++g)
            {
                printf("#");
            }
            printf("\n");
        }
        break;
    }
    }
}
